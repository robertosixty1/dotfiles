#!/bin/zsh

function addtopath()
{
    echo "PATH=\$PATH:$1" >> ~/.bashrc-personal
    echo "PATH=\$PATH:$1" >> ~/.zshrc-personal
}

function changeBright()
{
    # IMPORTANT! - LVDS1 is only for my laptop! For you, you
    # can get this information with xrandr
    xrandr --output LVDS1 --brightness $1
}

PATH=$PATH:/home/syxarch/.opt/porth/
PATH=$PATH:/home/syxarch/.opt/boomer/
PATH=$PATH:/home/syxarch/.opt/ascii-image-converter/
PATH=$PATH:/home/syxarch/.opt/godot/
PATH=$PATH:/home/syxarch/.opt/syfetch/
